@model ITCenterBack.ViewModels.SliderImageViewModel
@{
	Layout = "/Views/Shared/_AdminLayout.cshtml";
	ViewBag.Title = "Удалить картинку слайдера";
}

<div class="admin-page__content">
	<div class="admin-page__content-form">
		<div class="admin-form">
			<div class="admin-form__item">
				<h2 class="heading">Удаление</h2>
			</div>
			<div class="admin-form__item">
				<label class="input__label">
					Картинка<br />
					<img src=@Model.Image alt="images"> <hr />
				</label>
			</div>

			@using (Html.BeginForm())
			{
				@Html.AntiForgeryToken()
				<div class="form-actions no-color">
					<input type="submit" value="Удалить" class="file-button" />
					|
					@Html.ActionLink("Назад", "SliderImages")
				</div>
			}

			<div class="admin-form__item"></div>
			<div class="admin-form__item"></div>
		</div>
	</div>
</div>
