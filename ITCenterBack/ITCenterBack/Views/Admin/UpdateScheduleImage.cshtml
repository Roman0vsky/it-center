@model ITCenterBack.ViewModels.ScheduleViewModel
@{
	Layout = "/Views/Shared/_AdminLayout.cshtml";
	ViewBag.Title = "Редактировать изображение расписания";
}

<div class="admin-page__content">
	<div class="admin-page__content-form">
		<div class="admin-form">
			@using (Html.BeginForm(FormMethod.Post, new { enctype = "multipart/form-data" }))
			{
				<div class="admin-form__item">
					<h2 class="heading">Редактировать</h2>
				</div>
				<div class="admin-form__item">
					<label class="input__label">
						Изображение <hr />
						<div class="editor-field">
							<input type="file" name="uploadedFile" />
						</div>
					</label>
				</div>

				@Html.AntiForgeryToken()
				<div class="form-actions no-color">
					<input type="submit" value="Сохранить" class="file-button" />
					|
					@Html.ActionLink("Назад", "UpdateSchedule")
				</div>
			}

			<div class="admin-form__item"></div>
			<div class="admin-form__item"></div>
		</div>
	</div>
</div>
