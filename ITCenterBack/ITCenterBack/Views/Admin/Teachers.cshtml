@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model List<ITCenterBack.ViewModels.TeacherViewModel>
@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Преподаватели";
}

<div class="admin-page__content">
	<div class="admin-page__content-form">
		<div class="admin-form">
			<div class="admin-form__item">
				<h2 class="heading">Преподаватели</h2>
			</div>
			<a class="secondary-button" href=@Url.Content("/api/Admin/AddTeacher")>Добавить</a>
			<table>
				<colgroup id="a" span="5"></colgroup>
				<thead>
					<tr>
						<th>Изображение</th>
						<th>ФИО Преподавателя</th>
						<th>Курсы</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var t in Model)
					{
						<tr>
							<td> <img width="150" height="160" src=@t.Image alt="images"></td>
							<td>@t.Name</td>
							<td>
								@foreach (var c in t.Courses)
								{
									@c.Name
									<br></br>
								}
							</td>
								<td>
								<a asp-action="DeleteTeacher" asp-route-id="@t.Id" class="file-button">Удалить</a> 
								</td>
						</tr>
					}
					
				</tbody>
			</table>

			<div class="admin-form__item"></div>
			<div class="admin-form__item"></div>
		</div>
	</div>
</div>
