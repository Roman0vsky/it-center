@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model ITCenterBack.ViewModels.InfoViewModel
@{
	Layout = "/Views/Shared/_AdminLayout.cshtml";
	ViewBag.Title = "Информация";
}

<div class="admin-page__content">
	<div class="admin-page__content-form">
		<div class="admin-form">
			<div class="admin-form__item">
				<h2 class="heading">Информация</h2>
			</div>
			<table>
				<colgroup id="a" span="5"></colgroup>
				<thead>
					<tr>
						<th>Описание</th>
						<th>Содержание</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>Первый текст в шапке</td>
						<td>@Model.SliderFirstText</td>
						<td>
							<a class="secondary-button" href=@Url.Content("/api/Info/UpdateSliderFirstText")>Обновить</a>
						</td>
					</tr>
					<tr>
						<td>Второй текст в шапке</td>
						<td>@Model.SliderSecondText</td>
						<td>
							<a class="secondary-button" href=@Url.Content("/api/Info/UpdateSliderSecondText")>Обновить</a>
						</td>
					</tr>
					<tr>
						<td>Третий текст в шапке</td>
						<td>@Model.SliderThirdText</td>
						<td>
							<a class="secondary-button" href=@Url.Content("/api/Info/UpdateSliderThirdText")>Обновить</a>
						</td>
					</tr>
					<tr>
						<td>Название центра</td>
						<td>@Model.NameOfTheCenter</td>
						<td>
							<a class="secondary-button" href=@Url.Content("/api/Info/UpdateNameOfTheCenter")>Обновить</a>
						</td>
					</tr>
					<tr>
						<td>Название университета</td>
						<td>@Model.NameOfUniversity</td>
						<td>
							<a class="secondary-button" href=@Url.Content("/api/Info/UpdateNameOfUniversity")>Обновить</a>
						</td>
					</tr>
					<tr>
						<td>Адрес университета</td>
						<td>@Model.AdressOfUniversity</td>
						<td>
							<a class="secondary-button" href=@Url.Content("/api/Info/UpdateAdressOfUniversity")>Обновить</a>
						</td>
					</tr>
					<tr>
						<td>Логотип вверху</td>
						<td><img width="150" height="160" src=@Model.HeaderLogo alt="images"></td>
						<td>
							<a class="secondary-button" href=@Url.Content("/api/Info/UpdateHeaderLogo")>Обновить</a>
						</td>
					</tr>
					<tr>
						<td>Логотип внизу</td>
						<td><img width="150" height="160" src=@Model.FooterLogo alt="images"></td>
						<td>
							<a class="secondary-button" href=@Url.Content("/api/Info/UpdateFooterLogo")>Обновить</a>
						</td>
					</tr>
					<tr>
						<td>Первый номер телефона</td>
						<td>@Model.PhoneNumber1</td>
						<td>
							<a class="secondary-button" href=@Url.Content("/api/Info/UpdateFirstPhoneNumber")>Обновить</a>
						</td>
					</tr>
					<tr>
						<td>Второй номер телефона</td>
						<td>@Model.PhoneNumber2</td>
						<td>
							<a class="secondary-button" href=@Url.Content("/api/Info/UpdateSecondPhoneNumber")>Обновить</a>
						</td>
					</tr>
					<tr>
						<td>Email</td>
						<td>@Model.Email</td>
						<td>
							<a class="secondary-button" href=@Url.Content("/api/Info/UpdateEmail")>Обновить</a>
						</td>
					</tr>

					<tr>
						<td>Учебный год</td>
						<td>@Model.SchoolYear</td>
						<td>
							<a class="secondary-button" href=@Url.Content("/api/Info/UpdateSchoolYear")>Обновить</a>
						</td>
					</tr>
				</tbody>
			</table>

			<div class="admin-form__item"></div>
			<div class="admin-form__item"></div>
		</div>
	</div>
</div>
