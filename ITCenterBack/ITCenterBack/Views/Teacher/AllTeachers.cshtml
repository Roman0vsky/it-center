@model ITCenterBack.ViewModels.AllTeachersViewModel
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Преподаватели | IT - центр";
}

<header>@await Html.PartialAsync("/Views/Shared/_Header.cshtml", Model.Header)</header>

<main class="no-banner">
    <!-- visual/banner of the page -->
    <section class="visual visual-sub visual-no-bg">
        <div class="visual-inner no-overlay bg-gray-light">
            <div class="centered">
                <div class="container">
                    <div class="visual-text visual-center">
                        <h1 class="visual-title visual-sub-title">Преподаватели</h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="centered__persons">

            <div class="persons">
                @foreach (var t in Model.Teachers)
                {
                    <div class="person">
                        <img class="person__avatar" src=@t.Image alt=@t.Name>
                        <span href=@t.Link class="person__name"><a href=@t.Link>@t.Name</a></span>
                        <span class="person__specialization">@t.Description</span>
                    </div>
                }


                @*<div class="person">
                    <img class="person__avatar" src="./images/Shpakov.jpg " alt="Шпаков С А">
                    <span href="https://vsu.by/persons/4140-626" class="person__name"><a href="https://vsu.by/universitet/ob-universitete/236-universitet/personalii/4140-shpakov-sergej-andreevich.html">Шпаков С А</a></span>
                    <span class="person__specialization">Робототехника LEGO EV3</span>
                </div>*@
            </div>
        </div>
    </section>

</main>

<footer>@await Html.PartialAsync("/Views/Shared/_Footer.cshtml", Model.Footer)</footer>