@model ITCenterBack.ViewModels.HeaderViewModel
@{
}

<header class="fixed-top main-header header-white transparent with-side-panel-ico sticky-nav" id="waituk-main-header">
    <div id="nav-section">

        <div class="bottom-header container-fluid mega-menus" id="mega-menus">

            <style>
                .ddd {
                    display: flex;
                    justify-content: space-evenly;
                    flex-direction: row;
                    width: 100%;
                    align-items: center;
                }

                .aaaa {
                    display: none;
                }

                @@media (max-width: 1024px) {
                    .ddd

                {
                    display: none;
                }

                .aaaa {
                    margin-top: 10px;
                    display: flex;
                    justify-content: center;
                }

                }
            </style>
            <div class="ddd">
                <div>
                    <a class="navbar-brand mr-auto m-sm-auto" href=@Url.Content("/api/Home/Index")> <img class="mobile-logo" src=@Model.Info.HeaderLogo alt="IT-центр">  </a>
                </div>
                <div style="
                        display: flex;
                        align-items: center;
                        flex-direction: column;
                        ">
                    <h6>Учреждение образования "@Model.Info.NameOfUniversity"</h6>
                    <h3>Образовательный IT-Центр</h3>
                    <div style="display: flex; flex-direction: row;">
                        <h4 class="h4-hider">Математика &nbsp</h4>
                        <h4 class="h4-hider">Информатика &nbsp</h4>
                        <h4 class="h4-hider">Робототехника</h4>
                    </div>
                    <h4>Будущего</h4>

                </div>
                <div style="
                        display: flex;
                        align-items: center;
                        flex-direction: column;
                        ">
                    <h4>@Model.Info.PhoneNumber1 </h4>
                    <h4>email: @Model.Info.Email </h4>
                    <h4>@Model.Info.PhoneNumber2</h4>
                </div>
            </div>
            <div class="aaaa">
                <h3>IT-Центр</h3>
            </div>
            <nav class="navbar navbar-toggleable-md no-border-radius no-margin mega-menu-multiple" id="navbar-inner-container">
                <button type="button" class="navbar-toggler navbar-toggler-left" data-toggle="collapse" data-target="#mega-menu">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse flex-row-reverse" id="mega-menu">
                    <ul class="nav navbar-nav">
                        <li class="dropdown dropdown_first" data-animation="fadeIn">
                            <a class="dropdown-toggle formula" data-title="Home" href=@Url.Content("/api/Home/Index")>ГЛАВНАЯ</a>
                        </li>
                        <li class="dropdown dropdown_second" data-animation="fadeIn">
                            <a class="dropdown-toggle" data-toggle="dropdown" data-title="Home"> О нас </a>
                            <ul class="dropdown-menu no-border-radius">
                                <li class="dropdown_second colored"><a href=@Url.Content("/api/Administration/Details")> Администрация</a></li>
                                <li class="dropdown_second colored"><a href=@Url.Content("/api/Teacher/AllTeachers")> Преподаватели</a></li>
                                <li class="dropdown_second colored"><a href=@Url.Content("/api/Home/Contacts")> Контакты</a></li>
                            </ul>
                        </li>
                        <li class="dropdown dropdown_third" data-animation="fadeIn">
                            <a class="dropdown-toggle" data-toggle="dropdown" data-title="Home"> Секции</a>
                            <ul class="dropdown-menu no-border-radius">
                                @foreach (var t in Model.Sections)
                                {
                                    <li class="dropdown_third colored">
                                        <a href=@Url.Content("/api/Section/Details/" + @t.Id)>
                                            @t.Name
                                        </a>
                                    </li>
                                }
                            </ul>
                            
                        </li>

                        <li class="dropdown_fourth">
                            <a href=@Url.Content("/api/Home/Schedule")> Расписание</a>
                        </li>
                        <li class="dropdown_fin">
                            <a href=@Url.Content("/api/News/All")> Новости</a>
                        </li>
                        <!-- любой текст  <li class="dropdown_fifth">
                              <a href="person.html"> Преподаватели</a>
                          </li> -->

                        <li class="dropdown dropdown_seventh" data-animation="fadeIn">
                            <a class="dropdown-toggle" data-toggle="dropdown" data-title="Home"> Подписывайтесь </a>
                            <ul class="dropdown-menu no-border-radius">
                                @foreach (var link in Model.Links)
                                {
                                    <li class="dropdown_seventh colored">
                                        <a href=@link.Url>
                                            <ion-icon name="logo-vk"></ion-icon>
                                            @link.Name
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>

                        <li class="dropdown_sixth">
                            <a href=@Url.Content("/api/Home/Apllication")> Записаться на курс </a>
                        </li>

                    </ul>
                </div>
            </nav>
        </div>
    </div>
</header>

