@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model List<ITCenterBack.ViewModels.SectionViewModel>
@{
	Layout = "/Views/Shared/_AdminLayout.cshtml";
	ViewBag.Title = "Секции";
}

<div class="admin-page__content">
	<div class="admin-page__content-form">
		<div class="admin-form">
			<div class="admin-form__item">
				<h2 class="heading">Секции</h2>
			</div>
			<a class="secondary-button" href=@Url.Content("/api/Section/Add")>Добавить</a>
			<table>
				<colgroup id="a" span="5"></colgroup>
				<thead>
					<tr>
						<th>Картинка</th>
						<th>Название</th>
						<th>Описание</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var t in Model)
					{
						<tr>
							<td> <img src=@t.Image alt="images"></td>
							<td>@t.Name</td>
							<td>
								@if (t.Description.Length > 90)
								{
									@string.Concat((@t.Description).AsSpan(0, 90), "...")
								}
								else
								{
									@t.Description
								}
							</td>
							<td>
								<a asp-action="DeleteSection" asp-route-id="@t.Id" class="file-button" type="file">Удалить</a>
							</td>
						</tr>
					}

				</tbody>
			</table>

			<div class="admin-form__item"></div>
			<div class="admin-form__item"></div>
		</div>
	</div>
</div>