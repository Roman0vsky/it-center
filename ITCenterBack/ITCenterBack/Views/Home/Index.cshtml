    <!-- main content wrapper -->
    <div class="content-wrapper">
        <section class="content-block">
            <div class="container">
                <div class="row multiple-row v-align-row">
                    <div id="mob" class="col-lg-4 col-md-6">
                        <div class="col-wrap">
                            <div class="block-heading" style="text-align:center">
                                <h3 class="block-top-heading">Добро пожаловать в</h3>
                                <h2 class="block-main-heading formula">@Model.Footer.Info.NameOfTheCenter </h2>
                                <span class="block-sub-heading">МИР Будущего</span>
                                <div class="divider"><img src="/assets/for_new/img/divider.png" alt="images description"></div>
                            </div>
                        </div>
                    </div>
                    @for(var i = 0; i <= Model.Squares.Count(); i++)
                    {
                        @if (i == 0)
                        {
                            <a href=@Url.Content("/api/Square/Details/" + @Model.Squares[i].Id) class="col-lg-4 col-md-6">
                                <div class="col-wrap">
                                    <div class="ico-box bg-gray-light has-radius-medium">
                                        <div class="icon">
                                            <img src=@Model.Squares[i].Image>
                                        </div>
                                        <h4 class="content-title">@Model.Squares[i].Title</h4>
                                        <div class="des">
                                            <p>@Model.Squares[i].TextPreview</p>
                                        </div>
                                        <div class="link-holder">
                                            &nbsp;
                                        </div>
                                    </div>
                                </div>
                            </a>
                        }
                        @if(i == 1)
                        {
                            <div id="desc" class="col-lg-4 col-md-6">
                                <div class="col-wrap">
                                    <div class="block-heading" style="text-align:center">
                                        <h3 class="block-top-heading">Добро пожаловать в</h3>
                                        <h2 class="block-main-heading formula">@Model.Footer.Info.NameOfTheCenter</h2>
                                        <span class="block-sub-heading">МИР Будущего</span>
                                        <div class="divider"><img src="/assets/for_new/img/divider.png" alt="images description"></div>
                                    </div>
                                </div>
                            </div>
                        }
                        @if(i > 1)
                        {
                            <a href=@Url.Content("/api/Square/Details/" + @Model.Squares[i - 1].Id) class="col-lg-4 col-md-6">
                                <div class="col-wrap">
                                    <div class="ico-box bg-gray-light has-radius-medium">
                                        <div class="icon">
                                            <img src=@Model.Squares[i - 1].Image>
                                        </div>
                                        <h4 class="content-title">@Model.Squares[i - 1].Title</h4>
                                        <div class="des">
                                            <p>@Model.Squares[i - 1].TextPreview</p>
                                        </div>
                                        <div class="link-holder">
                                            &nbsp;
                                        </div>
                                    </div>
                                </div>
                            </a>
                        }
                    }
                </div>
            </div>
            <div id="about-hr"></div>
        </section>

        </section>

        <section class="content-block">
            <div class="container">
                <div class="block-heading bottom-space text-center">
                    <h2 class="block-main-heading formula">IT-центр</h2>
                    <div class="divider"><img src="/assets/for_new/img/divider.png" alt="images description"></div>
                </div>

                <div class="row" style="width: 100%; margin: 0;">
                    <div class="col-lg-6 col-md-12">
                        <div class="bottom-space-small-only">
                            <p style="white-space:pre-line;">
                                @Model.AboutUs.Description
                            </p>


                        </div>
                    </div>
                    <div class="col-lg-6 col-md-12">
                        <div class="bottom-s-space">
                            <iframe width="100%" height="315" src=@Model.AboutUs.Url title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                        </div>
                    </div>
                </div>
                <div class="block-heading text-center">
                    <div class="btn-container top-s-space">
                        <a href=@Url.Content("/api/Home/Apllication") class="btn btn-black has-radius-small">Записаться</a>
                    </div>
                </div>
            </div>
            <div id="direction-hr"></div>
        </section>


        <section class="content-block">
            <div class="container">
                <div class="news__container">
                <div class="block-heading bottom-space text-center">
                    <div id="gal-hr"></div>
                    <h2 class="block-main-heading formula">Новости</h2>
                    <div class="divider">
                        <img src="/assets/for_new/img/divider.png" alt="images description">
                    </div>
                </div>

                @foreach(var news in Model.News)
                {
                    <div class="news">
                        <img class="news__img" src=@news.Image alt="news">
                        <div class="news__wrapp">
                            <div class="news__content">
                                <div class="news__title">@news.Title</div>
                                <div class="news__text">
                                    @news.ShortText
                                </div>
                            </div>
                            <div class="news__wrapper-date">
                                <span class="news__date">@news.PublicationDate</span>
                                <div class="btn-container top-s-space news__btn">
                                    <a href=@Url.Content("/api/News/Details/" + @news.Id) class="btn btn-black has-radius-small">Читать далее</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <a href=@Url.Content("/api/News/All") class="btn btn-black has-radius-small all-news-btn">Читать все новости</a>
                </div>
            </div>
        </section>

        <div class="content-wrapper bg-gray-light" id="course">
            <section class="content-block portfolio-block">
                <div class="bottom-space text-center text-uppercase">
                    <h2>Осталось только выбрать направление</h2>
                    <div class="divider"><img src="/assets/for_new/img/divider.png" alt="images description"></div>
                </div>
                <div class="container">
                    <div class="row masonary-block grid">

                        @foreach(var c in Model.Courses)
                        {
                            <div class="gallery-item col-lg-6 col-xl-4 col-md-6 col-sm-6 col-6 robots development design else">
                                <figure class="caption-hover-full">
                                    <a class="fancy-pop" href=@Url.Content("/api/Course/Details/" + @c.Id)></a>
                                    <div class="image-wrapper">
                                        <img src=@c.Image>
                                        <strong style="text-align:center" class="content-title mb-0">@c.Name</strong>
                                    </div>

                                </figure>
                            </div>
                        }

                    </div>
                </div>

            </section>
        </div>


    </div>
    <!--/main content wrapper -->

    <footer>@await Html.PartialAsync("/Views/Shared/_Footer.cshtml", Model.Footer)</footer>
