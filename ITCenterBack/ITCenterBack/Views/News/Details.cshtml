@model ITCenterBack.ViewModels.NewsDetailsViewModel
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Новости | IT - центр";
}

<header>@await Html.PartialAsync("/Views/Shared/_Header.cshtml", Model.Header)</header>

<main>

    <div class="news-page__wrapper">
        <div class="news-page__title">
            @Model.News.Title
        </div>
        <div class="news-page__text">
            @Html.Raw(Model.News.Text)
        </div>
    </div>

</main>
    </div>

<footer>@await Html.PartialAsync("/Views/Shared/_Footer.cshtml", Model.Footer)</footer>