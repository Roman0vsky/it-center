@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model ITCenterBack.ViewModels.ApplicationsViewModel
@{
	Layout = "/Views/Shared/_AdminLayout.cshtml";
	ViewBag.Title = "Заявки";
}

<div class="admin-page__content">
	<div class="admin-page__content-form">
		<div class="admin-form">
			<div class="admin-form__item">
				<h2 class="heading">Заявки</h2>
			</div>
			<form method="get">
				<div class="admin-form__item">
					<label class="input__label">
						<input class="input input--width-label" type="text" name="fullName" placeholder="ФИО" />
						<input class="input input--width-label" type="text" name="school" placeholder="Школа" />
						<input class="input input--width-label" type="text" name="clas" placeholder="Класс" />
						<input class="input input--width-label" type="text" name="phone" placeholder="Телефон представителя" />
						<input class="input input--width-label" type="text" name="representativeFullName" placeholder="ФИО представителя" />

						<select name="course" asp-items="Model.Courses" class="select"></select>

						<input type="submit" value="Поиск"  />
					</label>
				</div>
			</form>
			
			<br/>

			<table>
				<colgroup id="a" span="5"></colgroup>
				<thead>
					<tr>
						<th>Фио</th>
						<th>Школа</th>
						<th>Класс</th>
						<th>Телефон представителя</th>
						<th>ФИО представителя</th>
						<th>Дата отправки заявки</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var t in Model.Applications)
					{
						<tr>
							<td>@t.ListenerFullName</td>
							<td>@t.SchoolName</td>
							<td>@t.Class</td>
							<td>@t.RepresentativePhoneNumber</td>
							<td>@t.RepresentativeFullName</td>
							<th>@t.Time</th>
							<td>
								<a asp-action="Details" asp-route-id="@t.Id" class="file-button" type="file">Подробнее</a>
								<a asp-action="Delete" asp-route-id="@t.Id" class="file-button" type="file">Удалить</a>
							</td>
						</tr>
					}
				</tbody>
			</table>

			<div class="admin-form__item"></div>
			<div class="admin-form__item"></div>
		</div>
	</div>
</div>
