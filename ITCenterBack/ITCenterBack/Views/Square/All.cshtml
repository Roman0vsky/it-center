@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model List<ITCenterBack.ViewModels.SquareViewModel>
@{
	Layout = "/Views/Shared/_AdminLayout.cshtml";
	ViewBag.Title = "Квадраты";
}

<div class="admin-page__content">
	<div class="admin-page__content-form">
		<div class="admin-form">
			<div class="admin-form__item">
				<h2 class="heading">Секции</h2>
			</div>
			<a class="secondary-button" href=@Url.Content("/api/Square/Add")>Добавить</a>
			<table>
				<colgroup id="a" span="5"></colgroup>
				<thead>
					<tr>
						<th>Картинка</th>
						<th>Заголовок</th>
						<th>Превью описания</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var t in Model)
					{
						<tr>
							<td> <img src=@t.Image alt="images"></td>
							<td>@t.Title</td>
							<td>
								@t.TextPreview
							</td>
							<td>
								<a asp-action="DeleteSquare" asp-route-id="@t.Id" class="file-button" type="file">Удалить</a>
							</td>
						</tr>
					}

				</tbody>
			</table>

			<div class="admin-form__item"></div>
			<div class="admin-form__item"></div>
		</div>
	</div>
</div>